#!/usr/bin/env ruby

require "bundler/setup"
require "top/wines"

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

# (If you use this, don't forget to add pry to your Gemfile!)
# require "pry"
# Pry.start
module Top
 class Wines; end
end


puts "Welcome to the top wines of the world list!"

puts "To get started, type: I love wine!"
input = gets.strip

  if input == "I love wine!"
    wine = Top::Wines.new
    wine.list
  else
    puts "Please try again - remember, it's always happy hour somewhere!"
  end

puts "Enter the number of any wine to see its description:"
user_input = gets.chomp
index = user_input.to_i - 1

  if (1..32).include?(index)
    wine = Top::Wines.new
    wine.description(index)
  else
    puts "Please enter a valid number."
  end

require "irb"
IRB.start(__FILE__)
